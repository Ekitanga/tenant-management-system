// Terminate lease
router.post('/leases/:id/terminate', authMiddleware, roleMiddleware('admin', 'landlord'), (req, res) => {
  try {
    const leaseId = req.params.id;
    const { termination_reason, termination_date } = req.body;
    
    // Get lease with property info for authorization
    const lease = db.prepare(`
      SELECT l.*, u.property_id, u.id as unit_id, p.landlord_id
      FROM leases l
      JOIN units u ON l.unit_id = u.id
      JOIN properties p ON u.property_id = p.id
      WHERE l.id = ?
    `).get(leaseId);
    
    if (!lease) {
      return res.status(404).json({ error: 'Lease not found' });
    }
    
    // Authorization check for landlords
    if (req.user.role === 'landlord' && lease.landlord_id !== req.user.id) {
      return res.status(403).json({ error: 'Access denied' });
    }
    
    // Check if already terminated
    if (lease.status === 'terminated') {
      return res.status(400).json({ error: 'Lease is already terminated' });
    }
    
    // Update lease status
    db.prepare(`
      UPDATE leases 
      SET status = 'terminated', 
          termination_reason = ?,
          termination_date = ?,
          updated_at = CURRENT_TIMESTAMP
      WHERE id = ?
    `).run(
      termination_reason || 'Terminated by administrator',
      termination_date || new Date().toISOString().split('T')[0],
      leaseId
    );
    
    // Update unit status to vacant
    db.prepare(`
      UPDATE units SET status = 'vacant' WHERE id = ?
    `).run(lease.unit_id);
    
    // Create notification for tenant
    const tenant = db.prepare('SELECT user_id FROM tenants WHERE id = ?').get(lease.tenant_id);
    if (tenant && tenant.user_id) {
      db.prepare(`
        INSERT INTO notifications (user_id, title, message, type)
        VALUES (?, ?, ?, ?)
      `).run(
        tenant.user_id,
        'Lease Terminated',
        `Your lease has been terminated. Reason: ${termination_reason || 'Not specified'}`,
        'lease'
      );
    }
    
    // Emit socket event
    try {
      const socketHandler = getSocketHandler(req);
      if (socketHandler && tenant) {
        socketHandler.emitLeaseUpdated(
          { ...lease, status: 'terminated' },
          tenant.user_id,
          lease.landlord_id
        );
      }
    } catch (socketError) {
      console.error('Socket emission error:', socketError);
    }
    
    res.json({ 
      message: 'Lease terminated successfully',
      unitStatus: 'vacant'
    });
  } catch (error) {
    console.error('Terminate lease error:', error);
    res.status(500).json({ error: 'Failed to terminate lease' });
  }
});

