router.delete('/tenants/:id', authMiddleware, roleMiddleware('admin', 'landlord'), (req, res) => {
  try {
    const tenant = db.prepare(`
      SELECT t.*, u.username, u.email
      FROM tenants t
      JOIN users u ON t.user_id = u.id
      WHERE t.id = ?
    `).get(req.params.id);
    
    if (!tenant) {
      return res.status(404).json({ error: 'Tenant not found' });
    }

    // Check for active lease
    const activeLease = db.prepare(`
      SELECT l.*, u.name as unit_name, p.name as property_name, p.landlord_id
      FROM leases l
      JOIN units u ON l.unit_id = u.id
      JOIN properties p ON u.property_id = p.id
      WHERE l.tenant_id = ? AND l.status = 'active'
    `).get(req.params.id);

    if (activeLease) {
      // Check landlord permission
      if (req.user.role === 'landlord' && activeLease.landlord_id !== req.user.id) {
        return res.status(403).json({ error: 'Access denied' });
      }

      return res.status(400).json({ 
        error: 'Tenant has active lease',
        details: `This tenant currently has an active lease for ${activeLease.property_name} - ${activeLease.unit_name}. Terminate the lease first.`,
        leaseId: activeLease.id,
        unitName: activeLease.unit_name,
        propertyName: activeLease.property_name,
        leaseEndDate: activeLease.end_date
      });
    }

    // Check for past leases
    const pastLeases = db.prepare(`
      SELECT COUNT(*) as count FROM leases WHERE tenant_id = ?
    `).get(req.params.id);

    // Check for payment history
    const payments = db.prepare(`
      SELECT COUNT(*) as count FROM payments WHERE tenant_id = ?
    `).get(req.params.id);

    // Delete tenant and associated user account
    const userId = tenant.user_id;
    
    // Delete in correct order to respect foreign keys
    db.prepare('DELETE FROM notifications WHERE user_id = ?').run(userId);
    db.prepare('DELETE FROM tenants WHERE id = ?').run(req.params.id);
    db.prepare('DELETE FROM users WHERE id = ?').run(userId);
    
    console.log(`Tenant deleted: ${tenant.full_name} (${tenant.username})`);
    console.log(`  - Past leases: ${pastLeases.count}`);
    console.log(`  - Payment records: ${payments.count}`);

    res.json({ 
      message: 'Tenant deleted successfully',
      tenantName: tenant.full_name,
      username: tenant.username,
      hadPastLeases: pastLeases.count > 0,
      hadPayments: payments.count > 0
    });
  } catch (error) {
    console.error('Delete tenant error:', error);
    res.status(500).json({ error: 'Failed to delete tenant', details: error.message });
  }
});

