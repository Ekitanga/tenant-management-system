// Allocate tenant to unit (creates lease automatically)
router.post('/tenants/:id/allocate', authMiddleware, roleMiddleware('admin', 'landlord'), (req, res) => {
  try {
    const tenantId = req.params.id;
    const { unit_id, start_date, end_date, rent_amount, deposit_amount } = req.body;
    
    // Validate required fields
    if (!unit_id || !start_date || !end_date || !rent_amount) {
      return res.status(400).json({ 
        error: 'Unit, start date, end date, and rent amount are required' 
      });
    }
    
    // Get tenant
    const tenant = db.prepare('SELECT * FROM tenants WHERE id = ?').get(tenantId);
    if (!tenant) {
      return res.status(404).json({ error: 'Tenant not found' });
    }
    
    // Get unit with property info
    const unit = db.prepare(`
      SELECT u.*, p.landlord_id, p.name as property_name
      FROM units u
      JOIN properties p ON u.property_id = p.id
      WHERE u.id = ?
    `).get(unit_id);
    
    if (!unit) {
      return res.status(404).json({ error: 'Unit not found' });
    }
    
    // Authorization check for landlords
    if (req.user.role === 'landlord' && unit.landlord_id !== req.user.id) {
      return res.status(403).json({ error: 'Access denied' });
    }
    
    // Check if unit is available
    if (unit.status === 'occupied') {
      return res.status(400).json({ error: 'Unit is already occupied' });
    }
    
    // Check if tenant already has an active lease
    const existingLease = db.prepare(`
      SELECT * FROM leases WHERE tenant_id = ? AND status = 'active'
    `).get(tenantId);
    
    if (existingLease) {
      return res.status(400).json({ 
        error: 'Tenant already has an active lease. Terminate it first before allocating a new unit.' 
      });
    }
    
    // Create lease
    const leaseResult = db.prepare(`
      INSERT INTO leases (tenant_id, unit_id, start_date, end_date, rent_amount, deposit_amount, status)
      VALUES (?, ?, ?, ?, ?, ?, 'active')
    `).run(tenantId, unit_id, start_date, end_date, rent_amount, deposit_amount || unit.deposit_amount || rent_amount);
    
    // Update unit status to occupied
    db.prepare(`
      UPDATE units SET status = 'occupied' WHERE id = ?
    `).run(unit_id);
    
    // Create notification for tenant
    if (tenant.user_id) {
      db.prepare(`
        INSERT INTO notifications (user_id, title, message, type)
        VALUES (?, ?, ?, ?)
      `).run(
        tenant.user_id,
        'Unit Allocated',
        `You have been allocated to ${unit.name} at ${unit.property_name}. Lease starts on ${start_date}.`,
        'lease'
      );
    }
    
    // Emit socket events
    try {
      const socketHandler = getSocketHandler(req);
      if (socketHandler) {
        const leaseData = {
          id: leaseResult.lastInsertRowid,
          tenant_id: tenantId,
          unit_id,
          start_date,
          end_date,
          rent_amount,
          status: 'active'
        };
        
        if (tenant.user_id) {
          socketHandler.emitLeaseCreated(leaseData, tenant.user_id, unit.landlord_id);
        }
      }
    } catch (socketError) {
      console.error('Socket emission error:', socketError);
    }
    
    res.status(201).json({ 
      message: 'Tenant allocated successfully',
      leaseId: leaseResult.lastInsertRowid,
      unitStatus: 'occupied'
    });
  } catch (error) {
    console.error('Allocate tenant error:', error);
    res.status(500).json({ error: 'Failed to allocate tenant' });
  }
});

