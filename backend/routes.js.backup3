// Update user (admin only)
router.put('/users/:id', authMiddleware, roleMiddleware('admin'), async (req, res) => {
  try {
    const userId = req.params.id;
    const { username, email, password, role, permissions, is_active } = req.body;
    
    const user = db.prepare('SELECT * FROM users WHERE id = ?').get(userId);
    if (!user) {
      return res.status(404).json({ error: 'User not found' });
    }
    
    // Check for duplicate username/email
    if (username !== user.username || email !== user.email) {
      const existing = db.prepare(
        'SELECT id FROM users WHERE (username = ? OR email = ?) AND id != ?'
      ).get(username || user.username, email || user.email, userId);
      if (existing) {
        return res.status(400).json({ error: 'Username or email already exists' });
      }
    }
    
    // Build update query
    let updateFields = [
      username || user.username,
      email || user.email,
      role || user.role,
      JSON.stringify(permissions || (user.permissions ? JSON.parse(user.permissions) : defaultPermissions[user.role])),
      is_active !== undefined ? (is_active ? 1 : 0) : user.is_active
    ];
    
    let updateQuery;
    
    // Update password if provided
    if (password) {
      const hashedPassword = await bcrypt.hash(password, 10);
      updateQuery = `
        UPDATE users SET 
          username = ?,
          email = ?,
          password = ?,
          role = ?,
          permissions = ?,
          is_active = ?
        WHERE id = ?
      `;
      updateFields = [
        username || user.username,
        email || user.email,
        hashedPassword,
        role || user.role,
        JSON.stringify(permissions || (user.permissions ? JSON.parse(user.permissions) : defaultPermissions[user.role])),
        is_active !== undefined ? (is_active ? 1 : 0) : user.is_active,
        userId
      ];
    } else {
      updateQuery = `
        UPDATE users SET 
          username = ?,
          email = ?,
          role = ?,
          permissions = ?,
          is_active = ?
        WHERE id = ?
      `;
      updateFields.push(userId);
    }
    
    db.prepare(updateQuery).run(...updateFields);
    
    res.json({ message: 'User updated successfully' });
  } catch (error) {
    console.error('Update user error:', error);
    res.status(500).json({ error: 'Failed to update user' });
  }
});

// Delete user (admin only)
router.delete('/users/:id', authMiddleware, roleMiddleware('admin'), (req, res) => {
  try {
    const userId = req.params.id;
    
    // Prevent deleting own account
    if (parseInt(userId) === req.user.id) {
      return res.status(400).json({ error: 'Cannot delete your own account' });
    }
    
    const user = db.prepare('SELECT * FROM users WHERE id = ?').get(userId);
    if (!user) {
      return res.status(404).json({ error: 'User not found' });
    }
    
    // Check for dependencies
    if (user.role === 'landlord') {
      const properties = db.prepare('SELECT COUNT(*) as count FROM properties WHERE landlord_id = ?').get(userId);
      if (properties.count > 0) {
        return res.status(400).json({ 
          error: 'Cannot delete landlord with properties. Reassign or delete properties first.' 
        });
      }
    }
    
    if (user.role === 'tenant') {
      const activeLeases = db.prepare(`
        SELECT COUNT(*) as count FROM leases l
        JOIN tenants t ON l.tenant_id = t.id
        WHERE t.user_id = ? AND l.status = 'active'
      `).get(userId);
      if (activeLeases.count > 0) {
        return res.status(400).json({ 
          error: 'Cannot delete tenant with active leases. Terminate leases first.' 
        });
      }
      
      // Delete tenant profile
      db.prepare('DELETE FROM tenants WHERE user_id = ?').run(userId);
    }
    
    // Delete notifications
    db.prepare('DELETE FROM notifications WHERE user_id = ?').run(userId);
    
    // Delete user
    db.prepare('DELETE FROM users WHERE id = ?').run(userId);
    
    res.json({ message: 'User deleted successfully' });
  } catch (error) {
    console.error('Delete user error:', error);
    res.status(500).json({ error: 'Failed to delete user' });
  }
});

