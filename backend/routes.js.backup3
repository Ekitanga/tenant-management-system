      LEFT JOIN tenants t ON u.id = t.user_id
      LEFT JOIN leases l ON t.id = l.tenant_id 
        AND l.status IN ('active', 'pending_tenant', 'pending_landlord', 'draft')
      LEFT JOIN units un ON l.unit_id = un.id
      LEFT JOIN properties p ON un.property_id = p.id
      LEFT JOIN payments pay ON l.id = pay.lease_id
      WHERE u.role = 'tenant'
    `;
    
    // Landlord can only see their tenants (those in their properties) or unassigned tenants
    if (req.user.role === 'landlord') {
      query += ` AND (p.landlord_id = ? OR p.landlord_id IS NULL)`;
      query += ` GROUP BY u.id ORDER BY u.created_at DESC`;
      const tenants = db.prepare(query).all(req.user.id);
      console.log(`ðŸ“‹ Landlord ${req.user.id} fetched ${tenants.length} tenants`);
      return res.json({ tenants });
    }
    
    // Admin sees all tenants
    query += ` GROUP BY u.id ORDER BY u.created_at DESC`;
    const tenants = db.prepare(query).all();
    
    console.log(`ðŸ“‹ Admin fetched ${tenants.length} tenants`);
    res.json({ tenants });
    
  } catch (error) {
    console.error('âŒ Get tenants error:', error);
    res.status(500).json({ error: 'Failed to fetch tenants', details: error.message });
  }
});

