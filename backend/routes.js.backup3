// Reassign tenant to different unit
router.post('/tenants/:id/reassign', authMiddleware, roleMiddleware('admin', 'landlord'), (req, res) => {
  try {
    const tenantId = req.params.id;
    const { new_unit_id, transfer_date, reason } = req.body;
    
    // Get tenant's current active lease
    const currentLease = db.prepare(`
      SELECT l.*, u.id as current_unit_id, p.landlord_id
      FROM leases l
      JOIN units u ON l.unit_id = u.id
      JOIN properties p ON u.property_id = p.id
      WHERE l.tenant_id = ? AND l.status = 'active'
    `).get(tenantId);
    
    if (!currentLease) {
      return res.status(400).json({ error: 'Tenant has no active lease to reassign' });
    }
    
    // Get new unit
    const newUnit = db.prepare(`
      SELECT u.*, p.landlord_id, p.name as property_name
      FROM units u
      JOIN properties p ON u.property_id = p.id
      WHERE u.id = ?
    `).get(new_unit_id);
    
    if (!newUnit) {
      return res.status(404).json({ error: 'New unit not found' });
    }
    
    if (newUnit.status === 'occupied') {
      return res.status(400).json({ error: 'New unit is already occupied' });
    }
    
    // Authorization
    if (req.user.role === 'landlord' && 
        (currentLease.landlord_id !== req.user.id || newUnit.landlord_id !== req.user.id)) {
      return res.status(403).json({ error: 'Access denied' });
    }
    
    // Update current lease with new unit
    db.prepare(`
      UPDATE leases 
      SET unit_id = ?,
          notes = COALESCE(notes, '') || '\nReassigned from unit ' || ? || ' on ' || ? || '. Reason: ' || ?
      WHERE id = ?
    `).run(new_unit_id, currentLease.current_unit_id, transfer_date || new Date().toISOString().split('T')[0], reason || 'Not specified', currentLease.id);
    
    // Update old unit to vacant
    db.prepare('UPDATE units SET status = ? WHERE id = ?').run('vacant', currentLease.current_unit_id);
    
    // Update new unit to occupied
    db.prepare('UPDATE units SET status = ? WHERE id = ?').run('occupied', new_unit_id);
    
    // Notify tenant
    const tenant = db.prepare('SELECT user_id FROM tenants WHERE id = ?').get(tenantId);
    if (tenant && tenant.user_id) {
      db.prepare(`
        INSERT INTO notifications (user_id, title, message, type)
        VALUES (?, ?, ?, ?)
      `).run(
        tenant.user_id,
        'Unit Reassignment',
        `You have been reassigned to ${newUnit.name} at ${newUnit.property_name}.`,
        'lease'
      );
    }
    
    res.json({ 
      message: 'Tenant reassigned successfully',
      oldUnit: currentLease.current_unit_id,
      newUnit: new_unit_id
    });
  } catch (error) {
    console.error('Reassign tenant error:', error);
    res.status(500).json({ error: 'Failed to reassign tenant' });
  }
});

