    }
    
    if (!lease.tenant_signature) {
      return res.status(400).json({ 
        error: 'Lease has not been signed by tenant' 
      });
    }
    
    db.prepare('BEGIN TRANSACTION').run();
    
    try {
      db.prepare(`
        UPDATE leases 
        SET status = 'active',
            landlord_approved_at = CURRENT_TIMESTAMP,
            landlord_approved_by = ?,
            updated_at = CURRENT_TIMESTAMP
        WHERE id = ?
      `).run(req.user.id, leaseId);
      
      db.prepare(`
        UPDATE units 
        SET status = 'occupied'
        WHERE id = ?
      `).run(lease.unit_id);
      
      const moveInAmount = parseFloat(lease.rent_amount) + parseFloat(lease.deposit_amount || 0);
      
      db.prepare(`
        INSERT INTO invoices (
          lease_id, tenant_id, amount, due_date, 
          description, status, invoice_type
        )
        VALUES (?, ?, ?, date('now', '+7 days'), ?, 'pending', 'move_in')
      `).run(
        leaseId,
        lease.tenant_id,
        moveInAmount,
        `Move-in charges: First month rent (${lease.rent_amount}) + Deposit (${lease.deposit_amount || 0})`
      );
      
      db.prepare('COMMIT').run();
      
      console.log(`âœ… Lease ${leaseId} approved and activated`);
      
      res.json({ 
        message: 'Lease approved and activated successfully',
        lease_id: leaseId,
        status: 'active',
        move_in_invoice_amount: moveInAmount
      });
      
    } catch (error) {
      db.prepare('ROLLBACK').run();
      throw error;
    }
    
  } catch (error) {
    console.error('âŒ Approve lease error:', error);
    res.status(500).json({ error: 'Failed to approve lease' });
  }
});

// LANDLORD: Reject signed lease
router.post('/leases/:id/reject', authMiddleware, blockSuperAdminOperations, (req, res) => {
  try {
    const leaseId = req.params.id;
    const { reason } = req.body;
    
    if (!reason || !reason.trim()) {
      return res.status(400).json({ error: 'Rejection reason is required' });
    }
    
    const lease = db.prepare(`
      SELECT l.*, t.user_id as tenant_user_id
      FROM leases l
      JOIN tenants t ON l.tenant_id = t.id
      WHERE l.id = ?
    `).get(leaseId);
    
    if (!lease) {
      return res.status(404).json({ error: 'Lease not found' });
    }
    
    db.prepare(`
      UPDATE leases 
      SET status = 'rejected',
          rejection_reason = ?,
          rejected_at = CURRENT_TIMESTAMP,
          rejected_by = ?,
          updated_at = CURRENT_TIMESTAMP
      WHERE id = ?
    `).run(reason, req.user.id, leaseId);
    
    db.prepare(`
      UPDATE units 
      SET status = 'available'
      WHERE id = ?
    `).run(lease.unit_id);
    
    console.log(`âŒ Lease ${leaseId} rejected by landlord`);
    
    res.json({ 
      message: 'Lease rejected',
      lease_id: leaseId,
      status: 'rejected'
    });
    
  } catch (error) {
    console.error('âŒ Reject lease error:', error);
    res.status(500).json({ error: 'Failed to reject lease' });
  }
});

// LANDLORD: Withdraw lease offer
router.post('/leases/:id/withdraw', authMiddleware, blockSuperAdminOperations, (req, res) => {
  try {
    const leaseId = req.params.id;
    
    const lease = db.prepare(`
      SELECT * FROM leases WHERE id = ?
    `).get(leaseId);
    
    if (!lease) {
      return res.status(404).json({ error: 'Lease not found' });
    }
    
    if (lease.status !== 'pending_tenant') {
      return res.status(400).json({ 
        error: 'Can only withdraw offers that are pending tenant signature' 
      });
    }
    
    db.prepare(`
      UPDATE leases 
      SET status = 'draft',
          offered_at = NULL,
          updated_at = CURRENT_TIMESTAMP
      WHERE id = ?
    `).run(leaseId);
    
    console.log(`âª Lease ${leaseId} offer withdrawn`);
    
    res.json({ 
      message: 'Lease offer withdrawn',
      lease_id: leaseId,
      status: 'draft'
    });
    
  } catch (error) {
    console.error('âŒ Withdraw lease error:', error);
    res.status(500).json({ error: 'Failed to withdraw lease offer' });
  }
});


module.exports = router;
